{
  "compilerOptions": {
    "target": "es2021",
    "baseUrl": ".",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "alwaysStrict": true,
    "strict": true,
    "esModuleInterop": true,
    "allowJs": false,
    "pretty": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "removeComments": true,
    "paths": {
      "@infra/*": ["src/infra/*"],
      "@domain/*": ["src/domain/*"],
      "@application/*": ["src/application/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
